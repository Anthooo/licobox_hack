{% extends 'base.html.twig' %}

{% block body %}
    <h1>Capture</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ capture.id }}</td>
            </tr>
            <tr>
                <th>Datecapture</th>
                <td>{% if capture.dateCapture %}{{ capture.dateCapture|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('capture_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('capture_edit', { 'id': capture.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
